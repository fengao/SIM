<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:columnCount="1" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="374dp"
        android:layout_column="0"
        android:layout_gravity="start|top"
        android:layout_row="0" >

        <ListView
            android:id="@+id/listViewOfflineMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
        
    </TableRow>

    <Button
        android:id="@+id/buttonLogoff"
        android:background="@drawable/buttonfillet"
        android:layout_width="141dp"
        android:layout_column="0"
        android:layout_gravity="start|bottom"
        android:layout_row="0"
        android:onClick="logOff"
        android:text="@string/logoff" />

    <Button
        android:id="@+id/buttonMenu"
        android:layout_width="145dp"
        android:background="@drawable/buttonfillet"      	  
        android:layout_column="0"
        android:layout_gravity="end|bottom"
        android:layout_row="0"
        android:onClick="backMenu"
        android:text="@string/backmenu" />

</GridLayout>